<%if @cartoon.comments.any?%>
    <h2>Комментарии</h2>
    <ul>
      <%@cartoon.comments.each do |comment|%>
          <li>
            <div class="comment">
              <p><%=comment.name%></p>
              <p>
                <%=comment.body%>
              </p>
            </div>
          </li>
      <%end%>
    </ul>
<%else%>
    <h2>Нет комментариев</h2>
<%end%>

<div class="formComment">
  <%=render :partial => 'comments/new', :object => @comment %>
</div>