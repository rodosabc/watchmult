<h1><%=@category.name%></h1>
<table>
    <% @category.subcategories.each do |subcategory| %>
      <tr>
        <td>
          <%=link_to category_path(subcategory) do%>
              <h3><%=subcategory.name%></h3>
          <%end%>
        </td>
      </tr>
    <%end%>
</table>
<hr>
<%if @cartoons.any?%>
    <table>
      <thead>
      <tr>
        <th>Cartoon url</th>
        <th>Rating</th>
        <th>Views</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @cartoons.each do |cartoon| %>
          <tr>
            <td><%= cartoon.cartoon_url %></td>
            <td><%= cartoon.rating %></td>
            <td><%= cartoon.views %></td>
            <td><%= cartoon.category.name %></td>
            <td><%=image_tag(image_url(cartoon.preview))%></td>
            <td><%= link_to 'Show', cartoon %></td>
            <td><%= link_to 'Edit', edit_cartoon_path(cartoon) %></td>
            <td><%= link_to 'Destroy', cartoon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<%end%>
